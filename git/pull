#!/bin/bash
SERVICE="github" 
# SERVICE="forgejo" 

if [[ "$SERVICE" == "forgejo" ]]; then
    echo SERVICE -\> $SERVICE; echo 

fi

if [[ "$SERVICE" == "github" ]]; then
    echo SERVICE -\> $SERVICE; echo 

    ROOT=/media
    USER=user1
    DRIVE=CORSAIR
    FILE=names.txt

    gh auth status
    echo

    for RESPOSITORY in `cat $FILE`
    do
    cd $ROOT/$USER/$DRIVE/"$RESPOSITORY" && pwd && git pull
    echo    
    done
fi
